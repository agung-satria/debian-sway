cmd moveto ${{
	clear; tput cup $(($(tput lines)/3)); tput bold
	set -f
	clear; echo "Move to where?"
	dest="$(sed -e 's/\s*#.*//' -e '/^$/d' -e 's/^\S*\s*//' $HOME/.config/lf/bm-dirs | fzf | sed 's|~|$HOME|')" &&
	for x in $fx; do
		eval mv -iv \"$x\" \"$dest\"
	done &&
	notify-send "ðŸšš File(s) moved." "File(s) moved to $dest."
}}

cmd copyto ${{
	clear; tput cup $(($(tput lines)/3)); tput bold
	set -f
	clear; echo "Copy to where?"
	dest="$(sed -e 's/\s*#.*//' -e '/^$/d' -e 's/^\S*\s*//' $HOME/.config/lf/bm-dirs | fzf | sed 's|~|$HOME|')" &&
	for x in $fx; do
		eval cp -ivr \"$x\" \"$dest\"
	done &&
	notify-send "ðŸ“‹ File(s) copied." "File(s) copies to $dest."
}}

# drag and drop
map <c-d> %dragon-drop -a -x $fx

# Bindings
map <c-f> $lf -remote "send $id select '$(fzf)'"
map J $lf -remote "send $id cd $(sed -e 's/\s*#.*//' -e '/^$/d' -e 's/^\S*\s*//' $HOME/.config/lf/bm-dirs | fzf)"
map f mkfile
map F mkdirr
map b setwallpaper
map D delete
map <a-delete> delete
map <delete> $trash-put -- $fx
map E extract
map C copyto
map M moveto
map <insert> push :touch<space>
map <c-n> push :mkdir<space>
map <c-r> reload
map <enter> shell
map x $$f
map X !$f
map o &mimeopen $f
map O $mimeopen --ask $f
map . set hidden!
map <backspace2> set hidden!

map A rename # at the very end
map c push A<c-u> # new rename
map I push A<c-a> # at the very beginning
map i push A<a-b><a-b><a-f> # before extension
map <f-2> push A<a-b><a-b><a-f> # before extension
map a push A<a-b> # after extension
map B bulk-rename

map <c-e> down
map <c-y> up
map V push :!nvim<space>
map Y $printf "%s" "$fx" | xclip -selection clipboard

map W $setsid -f $TERMINAL >/dev/null 2>&1
map S $alacritty --class sp-term &
map <c-o> $alacritty --class sp-term -e nvim $f &

# Source Bookmarks
source "~/.config/lf/shortcutrc"

# # Movement
map gh cd ~/
